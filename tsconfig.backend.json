{
  "compilerOptions": {
    "outDir": "./dist", // Output directory for backend files
    "module": "commonjs", // Backend typically uses CommonJS
    "target": "es2020", // Node.js version compatibility
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "resolveJsonModule": true, // Allows importing JSON files
    "baseUrl": "./", // Helps with path resolution if needed
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/api/**/*.ts"], // Only include backend API files
  "exclude": ["node_modules", "src/**/*.test.ts", "src/components", "src/utils", "src/index.tsx", "src/styles.css"]
}
